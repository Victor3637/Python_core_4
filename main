def main():
    # Створення об'єктів Phone і Birthday з відповідними значеннями
    phone = Phone("+1234567890")
    birthday = Birthday("01.01.2000")

    # Створення об'єкта Record з ім'ям, телефоном і днем народження
    record1 = Record("John Doe", phone, birthday)

    # Створення об'єкта Record без телефону та дня народження
    record2 = Record("Jane Smith")

    # Додавання записів до AddressBook
    address_book = AddressBook()
    address_book.add_record(record1)
    address_book.add_record(record2)

    # Показ першої сторінки (перші два записи) за допомогою ітератора AddressBook
    page_size = 2
    iterator = address_book.iterator(page_size)
    page = next(iterator)
    for record in page:
        print(f"Name: {record.name}")
        if record.phone:
            print(f"Phone: {record.phone.value}")
        if record.birthday:
            print(f"Birthday: {record.birthday.value}")
        print("---")

    # Приклад використання методу days_to_birthday для Record
    if record1.birthday:
        days = record1.days_to_birthday()
        print(f"Days to John Doe's birthday: {days}")

if __name__ == "__main__":
    main()
